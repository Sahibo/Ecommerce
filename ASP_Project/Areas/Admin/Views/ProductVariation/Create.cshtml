@using ASP_Project.Areas.Identity.Data.DbContexts;
@using ASP_Project.Areas.Identity.Data.Models
@inject UserContext _context
@model ProductVariation

@{
    Layout = "_AdminsLayout";
    var products = _context.Products.ToList();

}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product Variation</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="ProductId"></label>
            <select asp-for="ProductId" class="form-select">
                Select id
                <option selected>Select product id</option>
                @foreach (var product in products)
                {
                    <option value="@product.Id">@product.Id</option>
                }
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        @* <div class="mb-3"> *@
        @*     <label asp-for="Price"></label> *@
        @*     <input asp-for="Price" class="form-control" /> *@
        @*     <span asp-validation-for="Price" class="text-danger"></span> *@
        @* </div> *@
        @* <div class="mb-3"> *@
        @*     <label asp-for="Size"></label> *@
        @*     <input asp-for="Size" class="form-control" /> *@
        @*     <span asp-validation-for="Size" class="text-danger"></span> *@
        @* </div> *@
        <div class="mb-3">
            <label asp-for="Color"></label>
            <select asp-for="Color" class="form-select">
                <option value="@Color.None" selected>Select a color</option>
                @foreach (var color in Enum.GetValues(typeof(Color)))
                {
                    <option value="@color">@color</option>
                }
            </select>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        @* <div class="mb-3"> *@
        @*     <label asp-for="Quantity"></label> *@
        @*     <input asp-for="Quantity" class="form-control" /> *@
        @*     <span asp-validation-for="Quantity" class="text-danger"></span> *@
        @* </div> *@
        @* <div class="mb-3"> *@
        @*     <label asp-for="Discount"></label> *@
        @*     <input asp-for="Discount" class="form-control" /> *@
        @*     <span asp-validation-for="Discount" class="text-danger"></span> *@
        @* </div> *@
        <div class="form-group">
            <label asp-for="ProductImages" class="control-label"></label>
            <input type="file" name="files" multiple /> <!-- Use 'name="files"' for file input -->
            @* <span asp-validation-for="ImageURLs" class="text-danger"></span>  *@
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="ProductVariation" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>