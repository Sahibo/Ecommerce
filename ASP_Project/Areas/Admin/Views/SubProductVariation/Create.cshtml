@using ASP_Project.Areas.Identity.Data.DbContexts;
@using ASP_Project.Areas.Identity.Data.Models
@inject UserContext _context
@model SubProductVariation

@{
    Layout = "_AdminsLayout";
    var productsVariations = _context.ProductVariations.ToList();

}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Sub Product Variation</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="ProductVariationId"></label>
            <select asp-for="ProductVariationId" class="form-select">
                Select id
                <option selected>Select product variation id</option>
                @foreach (var productVariation in productsVariations)
                {
                    <option value="@productVariation.Id">@productVariation.Id</option>
                }
            </select>
            <span asp-validation-for="ProductVariationId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Size"></label>
            <input asp-for="Size" class="form-control" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Discount"></label>
            <input asp-for="Discount" class="form-control" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="SubProductVariation" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>