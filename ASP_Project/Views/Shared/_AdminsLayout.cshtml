<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/ASP_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/productIndex.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Customer" asp-action="Index" asp-controller="Home">ECommerce</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Customer" asp-action="Index" asp-controller="Home">
                                Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Content Management</a>
                       
                            <div class="dropdown-menu">
                                 @if (ViewContext.RouteData.Values["controller"].ToString() == "Category")
                                 {
                                     <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                     <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Create">Create category</a>
                                 }
                                @if (ViewContext.RouteData.Values["controller"].ToString() == "ParentCategory")
                                {
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="ParentCategory" asp-action="Index">Parent category</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="ParentCategory" asp-action="Create">Create parent category</a>
                                }
                                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a>
                            </div>
                            </li>
                        @* <li class="nav-item"> *@
                        @*     <a class=nav-link asp-area="Admin" asp-controller="Order" asp-action="Index"> *@
                        @*         Manage Order *@
                        @*     </a> *@
                        @* </li> *@
                    </ul>
                    <partial name="_LoginPartial" />
                    <form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>